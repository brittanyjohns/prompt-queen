<%= simple_form_for @prompt_template do |form| %>
  <%= form.error_notification %>
  <%= form.error_notification message: form.object.errors[:base].to_sentence if form.object.errors[:base].present? %>
  <div class='form-group'>
    <%= form.select :prompt_template_type,
        options_for_select(PromptTemplate.prompt_template_type_select, selected: form.object.prompt_template_type),
        {},
        'data-dynamic-select-target': 'select',
        'data-action': 'dynamic-select#selected', class: "form-control" %>
  </div>
  <div class="form-inputs">
    <%= form.input :name %>
  </div>
  <div data-controller="nested-form" data-nested-form-index-value='QUESTION_RECORD'>
    <template data-nested-form-target='template'>
      <%= form.fields_for :questions, Question.new, child_index: 'QUESTION_RECORD' do |question| %>
        <%= render 'question_fields', form: question %>
      <% end %>
    </template>
    <%= form.fields_for :questions do |question| %>
      <%= render 'question_fields', form: question %>
    <% end %>
    <div data-nested-form-target="add_item">
      <%= link_to "Add Question", "#", data: { action: "nested-form#add_association" }, class: "btn btn-success" %>
    </div>
  </div>
  <div class="actions">
    <%= form.button :submit, "Save", class: "btn btn-info" %>
  </div>
<% end %>
